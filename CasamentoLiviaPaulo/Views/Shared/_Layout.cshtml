<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Livia e Paulo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/principal.css" />

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/owl.carousel.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
</head>
<body>
    <div class="">
        <img src="~/img/vetor-topo-titulo.png" class="img-topo-titulo" />
        <nav>
            <div class="ml-4 ml-md-5 mt-3 mt-md-4  d-inline-block">
                <h2>
                    <span class="text-rosa text-bobbi font-78">Livia <img src="~/img/icone-coração-branco.png" class="coracao-branco" /> Paulo</span>
                </h2>
            </div>

            <button class="btn-hamburguer">
                <span class="hamburguer mt-0"></span>
                <span class="hamburguer"></span>
                <span class="hamburguer"></span>
            </button>

            <div class="ml-5 mt-3 menu-botoes">
                <button class="btn-fechar-menu">
                    <span class="hamburguer"></span>
                    <span class="hamburguer"></span>
                </button>
                <a href="/">Inicio</a>
                <a href="/#sobre">Sobre</a>
                <a href="/#fotos">Fotos</a>
                @Html.ActionLink("Presentes", "Index", "Home")
                <a href="/#contato">Contato</a>
            </div>
        </nav>
    </div>

    @RenderBody()

    <section class="contato" id="contato">
        <hr class="hr-branco" />
        <p class="text-center text-white font-weight-bold">São paulo - SP</p>
        <p class="text-center text-white font-weight-bold">(11) 94555-8336</p>
        <p class="text-center text-white font-weight-bold">Livia e Paulo - 2021 - Todos os direitos reservados</p>
    </section>

    <script type="text/javascript">
        $(".btn-hamburguer").click(function () {
            if ($(".menu-botoes").css("display") == "none") {
                $(".menu-botoes").css("display", "flex");
            } else {
                $(".menu-botoes").css("display", "none");
            }
        });

        $(".btn-fechar-menu").click(function () {

            $(".menu-botoes").css("display", "none");

        });
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
